<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.example.FileTPO.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.example.FileTPO.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListFiles</servlet-name>
        <servlet-class>com.example.FileTPO.ListFiles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFiles</servlet-name>
        <url-pattern>/ListFiles</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateFile</servlet-name>
        <servlet-class>com.example.FileTPO.CreateFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFile</servlet-name>
        <url-pattern>/CreateFile</url-pattern>
    </servlet-mapping>

</web-app>